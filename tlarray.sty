\def\MinofArray{\tlar@prepare\tlar@@min@of@array}
\def\tlar@@min@of@array#1{\tlar@check@array{#1}\tlar@min@of@array{#1}}
\def\tlar@min@of@array#1{\begingroup  % #1:Array(str)
